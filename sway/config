# --------------------
# Variables
# --------------------

set $mod Mod4

# --------------------
# Keybindings
# --------------------

bindsym $mod+Return exec gnome-terminal
bindsym Alt+F4 kill

# --------------------
# Appearance
# --------------------

output * bg /usr/share/backgrounds/background.jpg fill

gaps inner 5

default_border none

for_window [class="^.*"] border pixel 0

# --------------------
# Waybar
# --------------------

bar {
	swaybar_command waybar
}
